<UserControl x:Class="ETMPClient.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ETMPClient.Views"
             xmlns:conv="clr-namespace:ETMPClient.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:LocalizeConverter x:Key="Localize"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SETTINGS" Grid.Row="0" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="28" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,20,0,30"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <!-- Visualizer Settings -->
                <Border Background="{StaticResource Brush.Base.Surface}" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Visualizer Sensitivity" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource Brush.Text.Primary}"/>
                        <TextBlock Text="Adjust the reactivity gain of the audio visualizer." FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,5,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider Minimum="0.1" Maximum="5.0" Value="{Binding VisualizerSensitivity}" 
                                    Style="{StaticResource PrettySlider}" 
                                    TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding VisualizerSensitivity, StringFormat=N1}" 
                                       FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" 
                                       VerticalAlignment="Center" Margin="15,0,0,0" Width="30"/>
                        </Grid>

                        <TextBlock Text="Visualizer Color" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,15,0,5"/>
                        <ComboBox SelectedValue="{Binding VisualizerColorHex}" SelectedValuePath="Tag" HorizontalAlignment="Stretch" Style="{StaticResource {x:Type ComboBox}}">
                            <ComboBoxItem Content="Default Green" Tag="#1DB954"/>
                            <ComboBoxItem Content="Blue" Tag="#3F51B5"/>
                            <ComboBoxItem Content="Red" Tag="#E53935"/>
                            <ComboBoxItem Content="Purple" Tag="#9C27B0"/>
                            <ComboBoxItem Content="Orange" Tag="#FF9800"/>
                             <ComboBoxItem Content="Cyan" Tag="#00BCD4"/>
                              <ComboBoxItem Content="White" Tag="#FFFFFF"/>
                              <ComboBoxItem Content="Black" Tag="#000000"/>
                        </ComboBox>

                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.VisualizerOpacity}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,15,0,5"/>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider Minimum="0.1" Maximum="1.0" Value="{Binding VisualizerOpacity}" 
                                    Style="{StaticResource PrettySlider}" 
                                    TickFrequency="0.05" IsSnapToTickEnabled="True"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding VisualizerOpacity, StringFormat=N2}" 
                                       FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" 
                                       VerticalAlignment="Center" Margin="15,0,0,0" Width="40"/>
                        </Grid>

                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.VisualizerBrightness}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,15,0,5"/>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider Minimum="0.5" Maximum="3.0" Value="{Binding VisualizerBrightness}" 
                                    Style="{StaticResource PrettySlider}" 
                                    TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding VisualizerBrightness, StringFormat=N1}" 
                                       FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" 
                                       VerticalAlignment="Center" Margin="15,0,0,0" Width="40"/>
                        </Grid>

                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.VisualizerBarThickness}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,15,0,5"/>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider Minimum="2" Maximum="10" Value="{Binding VisualizerBarThickness}" 
                                    Style="{StaticResource PrettySlider}" 
                                    TickFrequency="1" IsSnapToTickEnabled="True"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding VisualizerBarThickness, StringFormat='{}{0:F0}px'}" 
                                       FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" 
                                       VerticalAlignment="Center" Margin="15,0,0,0" Width="50"/>
                        </Grid>

                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.VisualizerSpeed}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,15,0,5"/>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider Minimum="0.1" Maximum="1.0" Value="{Binding VisualizerSpeed}" 
                                    Style="{StaticResource PrettySlider}" 
                                    TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding VisualizerSpeed, StringFormat=N1}" 
                                       FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" 
                                       VerticalAlignment="Center" Margin="15,0,0,0" Width="40"/>
                        </Grid>

                        <TextBlock Text="Theme" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,15,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableThemes}" 
                                  SelectedItem="{Binding SelectedTheme}" 
                                  FontFamily="{StaticResource Urbanist}" FontSize="14"
                                  Style="{StaticResource {x:Type ComboBox}}"/>
                    </StackPanel>
                </Border>

                <!-- Font Settings -->
                <Border Background="{StaticResource Brush.Base.Surface}" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.Typography}" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.SongTitleSize}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}"/>
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Minimum="20" Maximum="60" Value="{Binding HomeTitleFontSize}" Style="{StaticResource PrettySlider}" IsSnapToTickEnabled="True" TickFrequency="1"/>
                             <TextBlock Grid.Column="1" Text="{Binding HomeTitleFontSize}" FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" VerticalAlignment="Center" Margin="15,0,0,0" Width="30"/>
                        </Grid>

                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.ArtistNameSize}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,10,0,0"/>
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                             <Slider Minimum="12" Maximum="36" Value="{Binding HomeArtistFontSize}" Style="{StaticResource PrettySlider}" IsSnapToTickEnabled="True" TickFrequency="1"/>
                             <TextBlock Grid.Column="1" Text="{Binding HomeArtistFontSize}" FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" VerticalAlignment="Center" Margin="15,0,0,0" Width="30"/>
                        </Grid>

                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.BackgroundCornerRadius}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,10,0,0"/>
                        <Grid Margin="0,5">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Minimum="0" Maximum="30" Value="{Binding HomeCornerRadius}" Style="{StaticResource PrettySlider}" IsSnapToTickEnabled="True" TickFrequency="1"/>
                             <TextBlock Grid.Column="1" Text="{Binding HomeCornerRadius}" FontFamily="{StaticResource Urbanist}" Foreground="{StaticResource Brush.Text.Primary}" VerticalAlignment="Center" Margin="15,0,0,0" Width="30"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Appearance Group -->
                <Border Background="{StaticResource Brush.Base.Surface}" CornerRadius="20" BorderBrush="{StaticResource Brush.Border.Glass}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.Appearance}" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,5">
                            <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.DarkMode}" VerticalAlignment="Center" Foreground="{StaticResource Brush.Text.Secondary}" FontFamily="{StaticResource Urbanist}"/>
                            <CheckBox HorizontalAlignment="Right" IsChecked="True" Style="{StaticResource {x:Type CheckBox}}"/> <!-- Using default style for now -->
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.GlassTransparency}" VerticalAlignment="Center" Foreground="{StaticResource Brush.Text.Secondary}" FontFamily="{StaticResource Urbanist}"/>
                            <Slider Width="100" HorizontalAlignment="Right" Value="80" Maximum="100" Style="{StaticResource PrettySlider}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- About Group -->
                <Border Background="{StaticResource Brush.Base.Surface}" CornerRadius="20" BorderBrush="{StaticResource Brush.Border.Glass}" BorderThickness="1" Padding="20">
                    <StackPanel>
                        <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.About}" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,15"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="{Binding Converter={StaticResource Localize}, ConverterParameter=Settings.Version}" Width="100" Foreground="{StaticResource Brush.Text.Muted}" FontFamily="{StaticResource Urbanist}"/>
                            <TextBlock Text="2.0.0 (ETMP Reborn)" Foreground="{StaticResource Brush.Text.Primary}" FontFamily="{StaticResource Urbanist}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Developer" Width="100" Foreground="{StaticResource Brush.Text.Muted}" FontFamily="{StaticResource Urbanist}"/>
                            <TextBlock Text="Emir Topay" Foreground="{StaticResource Brush.Text.Primary}" FontFamily="{StaticResource Urbanist}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
