<UserControl x:Class="ETMPClient.Views.MidiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ETMPClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,20,0,30">
            <TextBlock Text="MIDI" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="28" Foreground="{StaticResource Brush.Text.Primary}" HorizontalAlignment="Left"/>
            <Button Content="+" Width="40" Height="40" FontSize="24" Background="{StaticResource Brush.Base.Surface}" Foreground="{StaticResource Brush.Text.Primary}" BorderThickness="0" HorizontalAlignment="Right" Command="{Binding AddMidiFileCommand}" Cursor="Hand"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- MIDI Library -->
                <Border Background="{StaticResource Brush.Base.Surface}" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="MIDI Library" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,15"/>
                        
                        <ItemsControl ItemsSource="{Binding MidiFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource Brush.Base.Elevated}" CornerRadius="8" Padding="15,10" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding FileName}" FontFamily="{StaticResource Urbanist}" FontSize="14" Foreground="{StaticResource Brush.Text.Primary}" VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="1" Content="▶" Width="60" Height="30" FontSize="14" Background="{StaticResource Brush.Accent.Primary}" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Command="{Binding DataContext.PlayMidiCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Cursor="Hand"/>
                                            
                                            <Button Grid.Column="2" Content="✕" Width="30" Height="30" FontSize="14" Background="#FF4444" Foreground="White" BorderThickness="0" Command="{Binding DataContext.RemoveMidiCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Cursor="Hand"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Now Playing -->
                <Border Background="{StaticResource Brush.Base.Surface}" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Now Playing" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CurrentMidi.FileName}" FontFamily="{StaticResource Urbanist}" FontSize="14" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,0,0,15"/>
                        
                        <!-- Playback Controls -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Button Content="◄◄" Width="50" Height="40" FontSize="16" Background="{StaticResource Brush.Base.Elevated}" Foreground="{StaticResource Brush.Text.Primary}" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"/>
                            <Button Content="▶/❚❚" Width="60" Height="40" FontSize="16" Background="{StaticResource Brush.Accent.Primary}" Foreground="White" BorderThickness="0" Margin="0,0,10,0" Command="{Binding PlayCommand}" Cursor="Hand"/>
                            <Button Content="■" Width="50" Height="40" FontSize="16" Background="{StaticResource Brush.Base.Elevated}" Foreground="{StaticResource Brush.Text.Primary}" BorderThickness="0" Margin="0,0,10,0" Command="{Binding StopCommand}" Cursor="Hand"/>
                            <Button Content="►►" Width="50" Height="40" FontSize="16" Background="{StaticResource Brush.Base.Elevated}" Foreground="{StaticResource Brush.Text.Primary}" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>

                        <!-- Time Display -->
                        <TextBlock HorizontalAlignment="Center" FontFamily="{StaticResource Urbanist}" FontSize="14" Foreground="{StaticResource Brush.Text.Muted}">
                            <Run Text="{Binding Position, StringFormat=mm\\:ss}"/>
                            <Run Text="/"/>
                            <Run Text="{Binding Duration, StringFormat=mm\\:ss}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Channel Mixer -->
                <Border Background="{StaticResource Brush.Base.Surface}" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Channel Mixer (16 Channels)" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource Brush.Text.Primary}" Margin="0,0,0,15"/>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Channels}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource Brush.Base.Elevated}" CornerRadius="8" Padding="10" Margin="0,0,10,0" Width="80">
                                            <StackPanel>
                                                <!-- Channel Number -->
                                                <TextBlock Text="{Binding ChannelNumber, StringFormat=Ch {0}}" FontFamily="{StaticResource Urbanist}" FontSize="12" Foreground="{StaticResource Brush.Text.Primary}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                
                                                <!-- Instrument Name -->
                                                <TextBlock Text="{Binding InstrumentName}" FontFamily="{StaticResource Urbanist}" FontSize="9" Foreground="{StaticResource Brush.Text.Muted}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10" MaxWidth="70"/>
                                                
                                                <!-- Activity Indicator -->
                                                <Ellipse Width="10" Height="10" Fill="#00FF00" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                
                                                <!-- Volume Slider -->
                                                <Slider Orientation="Vertical" Height="150" Minimum="0" Maximum="127" Value="{Binding Volume}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                                                
                                                <!-- Volume Value -->
                                                <TextBlock Text="{Binding Volume}" FontFamily="{StaticResource Urbanist}" FontSize="11" Foreground="{StaticResource Brush.Text.Muted}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                
                                                <!-- Mute Button -->
                                                <Button Content="M" Width="60" Height="25" FontSize="11" Background="#666666" Foreground="White" BorderThickness="0" Margin="0,0,0,5" Cursor="Hand"/>
                                                
                                                <!-- Solo Button -->
                                                <Button Content="S" Width="60" Height="25" FontSize="11" Background="#666666" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
