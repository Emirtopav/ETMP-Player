<UserControl x:Class="ETMPClient.Views.EqualizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ETMPClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Converter to create collection of numbers for ItemsControl -->
        <local:RangeConverter x:Key="RangeConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,20,0,20">
            <TextBlock Text="EQUALIZER" FontFamily="{StaticResource Urbanist}" FontWeight="Bold" FontSize="28" Foreground="{StaticResource Brush.Text.Primary}"/>
            <Button Content="Reset" Command="{Binding ResetCommand}" HorizontalAlignment="Right" Style="{StaticResource FlatButton}" Foreground="{StaticResource Brush.Accent.Primary}"/>
        </Grid>

        <!-- Preset Selector -->
        <Border Grid.Row="1" Background="{StaticResource Brush.Base.Surface}" CornerRadius="10" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Preset:" FontFamily="{StaticResource Urbanist}" FontSize="14" Foreground="{StaticResource Brush.Text.Primary}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding Presets}" SelectedItem="{Binding SelectedPreset}" 
                          FontFamily="{StaticResource Urbanist}" FontSize="14"
                          Style="{StaticResource {x:Type ComboBox}}"/>
            </Grid>
        </Border>

        <!-- EQ Sliders + Preamp -->
        <Border Grid.Row="2" Background="{StaticResource Brush.Base.Surface}" CornerRadius="20" BorderBrush="{StaticResource Brush.Border.Glass}" BorderThickness="1" Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 10 Band Sliders -->
                <ItemsControl Grid.Column="0" ItemsSource="{Binding Bands}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="8,0">
                                <!-- Value Display -->
                                <TextBlock Text="{Binding Value, StringFormat='{}{0:+0.0;-0.0;0.0} dB'}" 
                                           HorizontalAlignment="Center" 
                                           FontFamily="{StaticResource Urbanist}" 
                                           FontSize="11" 
                                           Foreground="{StaticResource Brush.Accent.Primary}" 
                                           Margin="0,0,0,10"/>
                                
                                <!-- Slider Container with 0dB reference line -->
                                <Grid Width="40" Height="220">
                                    <!-- 0dB Reference Line -->
                                    <Rectangle Height="2" Fill="{StaticResource Brush.Text.Muted}" 
                                               Opacity="0.3" VerticalAlignment="Center" Margin="5,0"/>
                                    
                                    <!-- Slider Background -->
                                    <Border Background="{StaticResource Brush.Base.Elevated}" CornerRadius="20" Padding="0,10">
                                        <Slider Orientation="Vertical" 
                                                Minimum="-12" Maximum="12" Value="{Binding Value}"
                                                HorizontalAlignment="Center"
                                                Width="30"
                                                TickFrequency="0.5" IsSnapToTickEnabled="False"
                                                Foreground="{StaticResource Brush.Accent.Primary}"
                                                MouseWheel="Slider_MouseWheel">
                                            <Slider.Resources>
                                                <!-- Thumb Style -->
                                                <Style TargetType="Thumb">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Ellipse Width="16" Height="16" Fill="{StaticResource Brush.Accent.Primary}"/>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Slider.Resources>
                                        </Slider>
                                    </Border>
                                </Grid>
                                
                                <!-- Frequency Label -->
                                <TextBlock Text="{Binding Label}" 
                                           HorizontalAlignment="Center" 
                                           FontFamily="{StaticResource Urbanist}" 
                                           FontSize="12" 
                                           Foreground="{StaticResource Brush.Text.Muted}" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Preamp Slider (Right Side) -->
                <StackPanel Grid.Column="1" Margin="30,0,0,0" Width="80">
                    <TextBlock Text="PREAMP" 
                               HorizontalAlignment="Center" 
                               FontFamily="{StaticResource Urbanist}" 
                               FontWeight="Bold"
                               FontSize="12" 
                               Foreground="{StaticResource Brush.Text.Muted}" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="{Binding Preamp, StringFormat='{}{0:+0.0;-0.0;0.0} dB'}" 
                               HorizontalAlignment="Center" 
                               FontFamily="{StaticResource Urbanist}" 
                               FontSize="11" 
                               Foreground="{StaticResource Brush.Accent.Primary}" 
                               Margin="0,0,0,10"/>
                    
                    <!-- Preamp Slider Container -->
                    <Grid Width="50" Height="220">
                        <!-- 0dB Reference Line -->
                        <Rectangle Height="2" Fill="{StaticResource Brush.Text.Muted}" 
                                   Opacity="0.3" VerticalAlignment="Center" Margin="5,0"/>
                        
                        <!-- Slider Background -->
                        <Border Background="{StaticResource Brush.Base.Elevated}" CornerRadius="20" Padding="0,10">
                            <Slider Orientation="Vertical" 
                                    Minimum="-12" Maximum="12" Value="{Binding Preamp}"
                                    HorizontalAlignment="Center"
                                    Width="40"
                                    TickFrequency="0.5" IsSnapToTickEnabled="False"
                                    Foreground="{StaticResource Brush.Accent.Primary}"
                                    MouseWheel="Slider_MouseWheel">
                                <Slider.Resources>
                                    <Style TargetType="Thumb">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Width="18" Height="18" Fill="{StaticResource Brush.Accent.Primary}"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Slider.Resources>
                            </Slider>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
