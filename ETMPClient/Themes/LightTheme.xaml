<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Palette -->
    
    <!-- Base Colors -->
    <SolidColorBrush x:Key="Brush.Base.Deep" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Brush.Base.Surface" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Brush.Base.Elevated" Color="#FAFAFA"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="Brush.Accent.Primary" Color="#1DB954"/>
    <SolidColorBrush x:Key="Brush.Accent.Secondary" Color="#1ED760"/>
    <SolidColorBrush x:Key="Brush.Accent.Hover" Color="#1FDF64"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#000000"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#333333"/>
    <SolidColorBrush x:Key="Brush.Text.Muted" Color="#666666"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="#999999"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="Brush.Border.Default" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Brush.Border.Glass" Color="#20000000"/>
    <SolidColorBrush x:Key="Brush.Border.Subtle" Color="#F0F0F0"/>
    
    <!-- Interactive States -->
    <SolidColorBrush x:Key="Brush.Hover.Background" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="Brush.Active.Background" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="Brush.Selected.Background" Color="#1DB95420"/>
    
</ResourceDictionary>
