<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
        ETMP Theme: Deep Void Black + Neon Accents + Glass
    -->

    <!-- Color Palette -->
    <Color x:Key="Color.Base.Void">#050505</Color>
    <Color x:Key="Color.Base.Deep">#121212</Color>
    <Color x:Key="Color.Base.Surface">#1E1E1E</Color>
    <Color x:Key="Color.Base.Glass">#CC1E1E1E</Color> <!-- Semi-transparent -->

    <Color x:Key="Color.Accent.Primary">#00E0FF</Color> <!-- Neon Cyan -->
    <Color x:Key="Color.Accent.Secondary">#7000FF</Color> <!-- Neon Purple -->
    <Color x:Key="Color.Text.Primary">#FFFFFF</Color>
    <Color x:Key="Color.Text.Secondary">#AAAAAA</Color>
    <Color x:Key="Color.Text.Muted">#666666</Color>

    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="Brush.Base.Void" Color="{StaticResource Color.Base.Void}"/>
    <SolidColorBrush x:Key="Brush.Base.Deep" Color="{StaticResource Color.Base.Deep}"/>
    <SolidColorBrush x:Key="Brush.Base.Surface" Color="{StaticResource Color.Base.Surface}"/>
    
    <SolidColorBrush x:Key="Brush.Accent.Primary" Color="{StaticResource Color.Accent.Primary}"/>
    <SolidColorBrush x:Key="Brush.Accent.Secondary" Color="{StaticResource Color.Accent.Secondary}"/>
    
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Text.Primary}"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Text.Secondary}"/>
    <SolidColorBrush x:Key="Brush.Text.Muted" Color="{StaticResource Color.Text.Muted}"/>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="Brush.Gradient.Accent" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Color.Accent.Primary}" Offset="0.0"/>
        <GradientStop Color="{StaticResource Color.Accent.Secondary}" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="Brush.Gradient.Glass" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#22FFFFFF" Offset="0.0"/>
        <GradientStop Color="#05FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- UI Elements -->
    <SolidColorBrush x:Key="Brush.Border.Glass" Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="Brush.Border.Active" Color="{StaticResource Color.Accent.Primary}"/>

    <!-- Compatibility Keys (Mapping old names to new theme) -->
    <SolidColorBrush x:Key="Brush.Background.Main" Color="{StaticResource Color.Base.Void}"/>
    <SolidColorBrush x:Key="Brush.Background.Secondary" Color="{StaticResource Color.Base.Surface}"/>
    <SolidColorBrush x:Key="Brush.Hover.Background" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="Brush.Base.Elevated" Color="#2E2E2E"/>
    
    <!-- Legacy Color aliases for backward compatibility -->
    <Color x:Key="Color.Base.DarkGray">#333333</Color>
    <Color x:Key="Color.Base.LightGray">#AAAAAA</Color>
    <Color x:Key="Color.Text.Highlighted">#FFFFFF</Color>

    <!-- Fonts -->
    <!-- Assuming fonts are already loaded in App.xaml resources or global styles -->

</ResourceDictionary>
