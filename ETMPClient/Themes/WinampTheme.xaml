<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Winamp Retro Theme Color Palette -->
    <!-- Inspired by classic Winamp skins with dark backgrounds and neon accents -->
    
    <!-- Base Colors - Deep blacks and charcoals -->
    <SolidColorBrush x:Key="Brush.Base.Deep" Color="#0A0E27"/>
    <SolidColorBrush x:Key="Brush.Base.Surface" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Brush.Base.Elevated" Color="#2A2A2A"/>
    
    <!-- Accent Colors - Neon cyan and bright green -->
    <SolidColorBrush x:Key="Brush.Accent.Primary" Color="#00E0FF"/>
    <SolidColorBrush x:Key="Brush.Accent.Secondary" Color="#00BCD4"/>
    <SolidColorBrush x:Key="Brush.Accent.Hover" Color="#33E8FF"/>
    
    <!-- Text Colors - Bright whites and cyan tints -->
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#E0FFFF"/>
    <SolidColorBrush x:Key="Brush.Text.Muted" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="#606060"/>
    
    <!-- Border Colors - Metallic grays with neon glow -->
    <SolidColorBrush x:Key="Brush.Border.Default" Color="#404040"/>
    <SolidColorBrush x:Key="Brush.Border.Glass" Color="#4000E0FF"/>
    <SolidColorBrush x:Key="Brush.Border.Subtle" Color="#333333"/>
    
    <!-- Interactive States - Cyan-tinted hovers -->
    <SolidColorBrush x:Key="Brush.Hover.Background" Color="#252535"/>
    <SolidColorBrush x:Key="Brush.Active.Background" Color="#303545"/>
    <SolidColorBrush x:Key="Brush.Selected.Background" Color="#4000E0FF"/>
    
    <!-- Additional Winamp-specific colors -->
    <SolidColorBrush x:Key="Brush.Winamp.LCDGreen" Color="#00FF00"/>
    <SolidColorBrush x:Key="Brush.Winamp.SpectrumBlue" Color="#4080FF"/>
    <SolidColorBrush x:Key="Brush.Winamp.SpectrumRed" Color="#FF4040"/>
    <SolidColorBrush x:Key="Brush.Winamp.ButtonGray" Color="#3A3A3A"/>
    
    <!-- Background Gradient for retro feel -->
    <LinearGradientBrush x:Key="Brush.Background.Gradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A0E27" Offset="0.0"/>
        <GradientStop Color="#1A1A1A" Offset="0.5"/>
        <GradientStop Color="#0A0E27" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Compatibility Layer - Additional brushes used by UI -->
    <SolidColorBrush x:Key="Brush.Background.Main" Color="#0A0E27"/>
    <SolidColorBrush x:Key="Brush.Background.Secondary" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Brush.Background.Tertiary" Color="#2A2A2A"/>
    
    <SolidColorBrush x:Key="Brush.Border.Light" Color="#404040"/>
    
    <!-- Legacy compatibility keys (mapping old names to Winamp theme) -->
    <Color x:Key="primaryBackColor1">#0A0E27</Color>
    <Color x:Key="primaryBackColor2">#1A1A1A</Color>
    <Color x:Key="secondaryBackColor1">#1A1A1A</Color>
    <Color x:Key="secondaryBackColor2">#2A2A2A</Color>
    
    <SolidColorBrush x:Key="panelColor" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="panelOverColor" Color="#2A2A2A"/>
    
    <SolidColorBrush x:Key="titleColor1" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="plainTextColor1" Color="#E0FFFF"/>
    <SolidColorBrush x:Key="plainTextColor2" Color="#A0A0A0"/>
    
    <!-- Additional compatibility colors -->
    <Color x:Key="Color.Base.Black">#0A0E27</Color>
    <Color x:Key="Color.Base.DarkGray">#1A1A1A</Color>
    <Color x:Key="Color.Base.LightGray">#2A2A2A</Color>
    
    <Color x:Key="Color.Accent.Primary">#00E0FF</Color>
    <Color x:Key="Color.Accent.Secondary">#00BCD4</Color>
    
</ResourceDictionary>
