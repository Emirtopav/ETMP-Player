<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- MODERN THEME PALETTE -->
    
    <!-- Origins -->
    <Color x:Key="Color.Base.Black">#121212</Color>
    <Color x:Key="Color.Base.DarkGray">#1E1E1E</Color>
    <Color x:Key="Color.Base.LightGray">#2D2D2D</Color>
    
    <Color x:Key="Color.Accent.Primary">#00E0FF</Color>
    <Color x:Key="Color.Accent.Secondary">#0047FF</Color>

    <!-- Brushes: Backgrounds -->
    <SolidColorBrush x:Key="Brush.Background.Main" Color="{StaticResource Color.Base.Black}"/>
    <SolidColorBrush x:Key="Brush.Background.Secondary" Color="{StaticResource Color.Base.DarkGray}"/>
    <SolidColorBrush x:Key="Brush.Background.Tertiary" Color="{StaticResource Color.Base.LightGray}"/>
    <LinearGradientBrush x:Key="Brush.Background.Gradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0f0c29" Offset="0.0"/>
        <GradientStop Color="#302b63" Offset="0.5"/>
        <GradientStop Color="#24243e" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Brushes: Accents -->
    <SolidColorBrush x:Key="Brush.Accent.Primary" Color="{StaticResource Color.Accent.Primary}"/>
    <SolidColorBrush x:Key="Brush.Accent.Secondary" Color="{StaticResource Color.Accent.Secondary}"/>
    <LinearGradientBrush x:Key="Brush.Accent.Gradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Color.Accent.Primary}" Offset="0"/>
        <GradientStop Color="{StaticResource Color.Accent.Secondary}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Brushes: Text -->
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#B3B3B3"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="#666666"/>
    
    <!-- Brushes: UI Borders/Separators -->
    <SolidColorBrush x:Key="Brush.Border.Light" Color="#333333"/>
    
    <!-- COMPATIBILITY LAYER (Mapping old keys to new style) -->
    <Color x:Key="primaryBackColor1">#121212</Color>
    <Color x:Key="primaryBackColor2">#1E1E1E</Color>
    <Color x:Key="secondaryBackColor1">#1E1E1E</Color>
    <Color x:Key="secondaryBackColor2">#2D2D2D</Color>
    
    <SolidColorBrush x:Key="panelColor" Color="{StaticResource Color.Base.DarkGray}"/>
    <SolidColorBrush x:Key="panelOverColor" Color="{StaticResource Color.Base.LightGray}"/>
    
    <SolidColorBrush x:Key="titleColor1" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="plainTextColor1" Color="#B3B3B3"/>
    <SolidColorBrush x:Key="plainTextColor2" Color="#B3B3B3"/>

</ResourceDictionary>