<UserControl x:Class="ETMPClient.Controls.PlayerControl"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:local="clr-namespace:ETMPClient.Controls"
              xmlns:components="clr-namespace:ETMPClient.Components"
              mc:Ignorable="d" 
              d:DesignHeight="80" d:DesignWidth="800">
    
    <Grid Margin="15,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- Song Info -->
            <ColumnDefinition Width="*"/>    <!-- Controls & Seek -->
            <ColumnDefinition Width="Auto"/> <!-- Volume -->
        </Grid.ColumnDefinitions>

        <!-- Left: Song Info (Minimal) -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <!-- Compact Album Art -->
            <Border Width="50" Height="50" CornerRadius="6" Background="{StaticResource Brush.Base.Deep}" ClipToBounds="True" Margin="0,0,12,0">
                <Grid>
                    <!-- Default Icon -->
                    <TextBlock Text="&#xE93C;" FontFamily="Segoe MDL2 Assets" FontSize="20" 
                               Foreground="{StaticResource Brush.Text.Muted}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.2"/>
                    
                    <!-- Album Art -->
                    <Image Source="{Binding CoverArt, Converter={StaticResource ByteArrayToImageConverter}}" 
                           Stretch="UniformToFill"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </Border>
            
            <!-- Song Title + Artist (No file path) -->
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="SongTitleText"
                           Text="{Binding SongName, TargetNullValue='No Song Playing'}"
                           FontFamily="{StaticResource Urbanist}"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource Brush.Text.Primary}"
                           MaxWidth="180"
                           TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="ArtistNameText"
                           Text="{Binding ArtistName, TargetNullValue='Unknown Artist'}" 
                           FontFamily="{StaticResource Urbanist}"
                           FontSize="11"
                           Foreground="{StaticResource Brush.Text.Muted}"
                           Opacity="0.6"
                           MaxWidth="180"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Center: Controls & Progress -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30,0">
            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <!-- Shuffle Button -->
                <Button Command="{Binding ToggleShuffleCommand}" 
                        Width="32" Height="32" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,8,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Opacity" Value="0.4"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsShuffleEnabled}" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="&#xE8B1;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                               Foreground="{StaticResource Brush.Accent.Primary}"/>
                </Button>
                
                <!-- Previous (Neutral, hover to reveal) -->
                <Button Command="{Binding PlayBackward}" 
                        Width="32" Height="32" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Opacity="0.4">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="../Icons/backward.png" Width="14" Opacity="0.8"/>
                </Button>
                
                <!-- Play/Pause (Accent focal point) -->
                <Button Command="{Binding TogglePlayer}" 
                        Width="44" Height="44" 
                        Background="{StaticResource Brush.Accent.Primary}" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="16,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Grid>
                        <Image Source="../Icons/play.png" Width="18" Visibility="{Binding IsPlaying, Converter={StaticResource InverseBoolToVis}}"/>
                        <Image Source="../Icons/pause.png" Width="18" Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVis}}"/>
                    </Grid>
                </Button>

                <!-- Next (Neutral, hover to reveal) -->
                <Button Command="{Binding PlayForward}" 
                        Width="32" Height="32" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Opacity="0.4">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="../Icons/forward.png" Width="14" Opacity="0.8"/>
                </Button>
                
                <!-- Repeat Button -->
                <Button Command="{Binding CycleRepeatCommand}" 
                        Width="32" Height="32" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="8,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Opacity" Value="0.4"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RepeatMode}" Value="All">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RepeatMode}" Value="One">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" 
                               Foreground="{StaticResource Brush.Accent.Primary}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="&#xE8EE;"/> <!-- Repeat All -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RepeatMode}" Value="One">
                                        <Setter Property="Text" Value="&#xE8ED;"/> <!-- Repeat One -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>
            </StackPanel>
            
            <!-- Ultra-thin Progress Bar -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding SongProgressFormatted}" 
                           FontSize="9" 
                           Foreground="{StaticResource Brush.Text.Muted}" 
                           Opacity="0.5"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>
                
                <Slider Grid.Column="1" 
                        Style="{StaticResource PrettySlider}"
                        Minimum="0" 
                        Maximum="{Binding SongDuration}" 
                        Value="{Binding SongProgress}"
                        IsMoveToPointEnabled="True"
                        VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="2" 
                           Text="{Binding SongDurationFormatted}" 
                           FontSize="9" 
                           Foreground="{StaticResource Brush.Text.Muted}" 
                           Opacity="0.5"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>

        <!-- Right: Minimal Volume -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Opacity="0.6">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <Button Command="{Binding ToggleVolume}" 
                    Width="28" Height="28" 
                    Background="Transparent" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,8,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="14">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Image Source="../Icons/volume.png" Width="14" Opacity="0.7"/>
            </Button>
            
            <Slider Width="70" 
                    Style="{StaticResource PrettySlider}"
                    Minimum="0" 
                    Maximum="100" 
                    Value="{Binding Volume}"
                    VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
