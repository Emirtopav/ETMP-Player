<Window x:Class="ETMPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ETMPClient"
        xmlns:views="clr-namespace:ETMPClient.Views"
        xmlns:controls="clr-namespace:ETMPClient.Controls"
        xmlns:viewModels="clr-namespace:ETMPClient.ViewModels"
        SizeChanged="Window_SizeChanged"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Focusable="True"
        Title="ETMP Player"
        Icon="pack://application:,,,/icon.ico"
        MinHeight="600"
        MinWidth="800"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:LibraryViewModel}">
            <views:LibraryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:EqualizerViewModel}">
            <views:EqualizerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:PlaylistViewModel}">
            <views:PlaylistView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:MidiViewModel}">
            <views:MidiView/>
        </DataTemplate>
    </Window.Resources>

    <Border Background="{StaticResource Brush.Base.Void}" CornerRadius="10" ClipToBounds="True">
        <Grid>
            <!-- Background Elements (Glows/Blobs) -->
            <Canvas>
                <Ellipse Width="600" Height="600" Canvas.Top="-200" Canvas.Left="-100" Opacity="0.05" IsHitTestVisible="False">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="{StaticResource Color.Accent.Primary}" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Ellipse Width="700" Height="700" Canvas.Bottom="-250" Canvas.Right="-100" Opacity="0.05" IsHitTestVisible="False">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="{StaticResource Color.Accent.Secondary}" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>

            <!-- Main Layout Grid -->
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title Bar -->
                    <RowDefinition Height="*"/>    <!-- Content -->
                    <RowDefinition Height="Auto"/> <!-- Player (Floating) -->
                </Grid.RowDefinitions>

                <!-- Floating Sidebar -->
                <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" 
                        Background="{StaticResource Brush.Base.Surface}" 
                        CornerRadius="20"
                        Margin="10,10,10,10"
                        BorderBrush="{StaticResource Brush.Border.Glass}" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                    </Border.Effect>
                    <controls:ToolbarControl DataContext="{Binding ToolbarView}"/>
                </Border>

                <!-- Title Bar / Window Controls Area -->
                <Grid Grid.Column="1" Grid.Row="0" Height="40">
                    <TextBlock Text="ETMP" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"
                               FontFamily="{StaticResource Midnight}" 
                               FontSize="18"
                               Foreground="{StaticResource Brush.Text.Muted}"
                               Margin="20,0,0,0"
                               IsHitTestVisible="False"/>
                    
                    <!-- Drag Area -->
                    <Border Background="Transparent" MouseDown="DragWindow"/>

                     <!-- Window Buttons -->
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,0">
                         <Button Click="MinimizeButton_Click" Width="45" Height="30" 
                                 Style="{StaticResource FlatButton}" Background="Transparent" BorderThickness="0">
                             <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="{StaticResource Brush.Text.Secondary}"/>
                         </Button>
                         <Button Click="MaximizeButton_Click" Width="45" Height="30"
                                 Style="{StaticResource FlatButton}" Background="Transparent" BorderThickness="0">
                             <TextBlock Text="&#xE922;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="{StaticResource Brush.Text.Secondary}"/>
                         </Button>
                         <Button Click="ExitButton_Click" Width="45" Height="30"
                                 Style="{StaticResource CloseButtonStyle}" Background="Transparent" BorderThickness="0">
                             <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="{StaticResource Brush.Text.Secondary}"/>
                         </Button>
                     </StackPanel>
                </Grid>

                <!-- Main Content Area -->
                <Border Grid.Column="1" Grid.Row="1" 
                        Background="{StaticResource Brush.Base.Deep}" 
                        CornerRadius="20"
                        BorderBrush="{StaticResource Brush.Border.Glass}" BorderThickness="1"
                        ClipToBounds="True"
                        Margin="10,0,10,0">
                    <ContentControl Content="{Binding CurrentView}"/>
                </Border>

                <!-- Floating Player Bar -->
                <Border Grid.Column="1" Grid.Row="2" 
                        Height="80"
                        Margin="30,-40,30,20" 
                        Background="{StaticResource Brush.Base.Surface}"
                        CornerRadius="40"
                        BorderBrush="{StaticResource Brush.Border.Glass}" BorderThickness="1"
                        VerticalAlignment="Bottom">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
                    </Border.Effect>
                    <controls:PlayerControl DataContext="{Binding PlayerView}"/>
                </Border>

            </Grid>
        </Grid>
    </Border>
</Window>
